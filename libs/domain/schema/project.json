{
  "name": "client-schema",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/client/schema/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/client/schema",
        "main": "libs/client/schema/src/index.ts",
        "tsConfig": "libs/client/schema/tsconfig.lib.json",
        "assets": ["libs/client/schema/*.md"],
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/client/schema/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/libs/client/schema"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/libs/client/schema"
      }
    }
  },
  "tags": []
}
